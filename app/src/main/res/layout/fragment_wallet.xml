<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragments.WalletFragment">


<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="36dp"
    android:text="Remaining Balance : "
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:text="EGP"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/wallet_fragment_balance" />

<TextView
    android:id="@+id/wallet_fragment_balance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:text="---"
    android:textColor="@color/colorPrimary"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@+id/textView2"
    app:layout_constraintTop_toBottomOf="@+id/textView" />


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <Button
        android:id="@+id/open_map_btn"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:text="Return Map"
        android:background="@drawable/btn_backgroud"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-black"
        android:layout_width="0dp" />


    <Button
        android:id="@+id/recharge_balance_btn"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:textAllCaps="false"
        android:background="@drawable/btn_backgroud"
        android:fontFamily="sans-serif-black"
        android:layout_weight="1"
        android:text="Balance Recharge"
        android:layout_width="0dp" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>